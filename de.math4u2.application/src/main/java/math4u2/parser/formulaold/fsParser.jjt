	Token t;
}
{
	<UNDEFMATRIX>
	(
		(
			t= <INTEGER_LITERAL> 
			|
			t= <IDENTIFIER> 
		)
		{
			jjtThis.setName(t.image);
		}
	)
	#Number"," 
	(
		(
			t= <INTEGER_LITERAL> 
			|
			t= <IDENTIFIER> 
		)
		{
			jjtThis.setName(t.image);
		}
	)
	#Number")>" Ident() 
}

void PointExpression() #void:{
	Token t;
	String s;
}
{
	(
		
		t= <IDENTIFIER> 
		{
			s=t.image;
		}
		"."
		(
			t= <INTEGER_LITERAL>
			|
			t= <IDENTIFIER> 
		)
		{
			s+="."+t.image;
			jjtThis.setName(s);
		}
	)#Ident
}

void Ident() : {

	Token t;
	String s;

}
{
	t= <IDENTIFIER> 
	{
		jjtThis.setName(t.image);
		Map m = (Map)modifierMap.get(t.image);
		if(m!=null){
			jjtThis.setModifier(m);
			jjtThis.setBroker(broker);
		}
	}
	
}

void Number() : {

