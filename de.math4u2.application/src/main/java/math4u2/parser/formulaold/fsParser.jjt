/**
 * Ausdrücke die sowohl durch OperationsZeichen als auch durch Funktionen erzeugt werden können
 * expo(..,..) und fac(..)
 */
void DoubleFunction() #void : {
	Token type;

}
{
	(
		<FAC> "(" 
		(
			AdditiveExpression() 
		)
		#Brackets( ((SimpleNode)jjtree.peekNode()).getId() < 16)")" 
		(
			{
				jjtThis.setName("!");
			}
		)
		#Postfix
	)
	#PostfixExpression
	|
	(
		<EXPO> "(" 
		(
			AdditiveExpression() 
		)
		#Brackets(((SimpleNode)jjtree.peekNode()).getId() < 16 )
		"," (AdditiveExpression())#Brackets ")"
	)
	#Expo
}

void Root() : {
}
{
	(
		<SQRT>
		"(" AdditiveExpression() ")"
		(
			{jjtThis.setName("2");}
		)#Number
	)
	|
	<ROOT>
	"(" AdditiveExpression() "," AdditiveExpression() ")"
}

/*
 * spezieller Ausdruck zur Definition von Vektoren und Matrizen 
*/
void VecmathDefinition() : {
	int test;
	int test2;
	Token type;

}
{
	type= <VECMATH> 
	{
		jjtThis.setName(type.image);
	}
	"("
	
	(
		LOOKAHEAD(2)
		"{"test= Braces() "}"
		|
		(
			"{""{"
			test= Braces()
			"}"
			(
				",""{" test2= Braces() "}"
				{
					if (test != test2) 
					{
						throw new ParseException(
							"Ungleiche Spalten bei Matrix in Zeile: " + token.next.beginLine);
					}
				}
			)*
			"}"
		)
	)
	")" 
}

/*
 * Ausdruck für alle funktionen mit mehreren parametern: z.b. f(x,y)
*/
void EvalStep() #void : {}
{
	(
		(
			"(" RelationExpression() 
			(
				"," RelationExpression() 
			)*
			")" 
		)
		#ListedExpressions(>1) 
	)#Brackets
}

/*
 * wird zur Definition von Vektoren und Matrizen verwendet "{...}"
 */
int Braces() : {
	int counter= 1;
}
{
	RelationExpression() 
	(
		"," RelationExpression() 
		{
			counter++;
		}
	)* 
	{
		return counter;
	}
}

/*
 * Ausdruck für terme mit Index. Besteht aus:
 * - entweder einem geklammerten Ausdruck
 * - oder einer Variable
 * - und ein oder mehreren "[..]"- additiven Ausdrücken
 */
void IndexedExpression() #void : {}
{
	(
		Variable() 
		(Indeces())
	)
	#IndexedExpression(>1) 
}

/*
 * ein Indeces- Knoten
 */
void Indeces() #void: {}
{
	(
		(
			//IndexStep
			(
				"[" AdditiveExpression() ( "," AdditiveExpression() )* "]"
			)
			|
			// KeyWordStep
			( "." Ident() )
		)+
	)#Indeces
	
}

/*
 * ein geklammerter Ausdruck. sowohl "(...)" als auch "|...|"
 */
void Brackets() : {

	Token symbol;

}
{
	(
		(
			symbol= "(" Expression() ")" 
		)
		|
		(
			symbol= "|" AdditiveExpression() "|" 
		)
	)
	{
		jjtThis.setName(symbol.image);
	}
}

