void UndefinedVector() : {
	Token t;
	Token t2;
}
{
	t= <UNDEFVECTOR> 
	{
		jjtThis.setName(t.image);
	}
	(
		(
			(
				t2= <INTEGER_LITERAL> 
				|
				t2= <IDENTIFIER> 
			)
			{
				jjtThis.setName(t2.image);
			}
		)
		#Number
	)
	")>" Ident() 
}


  //erstellt eine matrix mit werten vom Typ m[1][1],m[1][2],...,m[1][n],m[2][1],...m[n][k];
